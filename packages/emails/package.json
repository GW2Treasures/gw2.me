{
  "name": "@gw2me/emails",
  "version": "0.1.0",
  "private": true,
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    }
  },
  "scripts": {
    "dev": "email dev",
    "build": "pnpm run clean && if test $CI; then pnpm run build:ci; else pnpm run build:local; fi",
    "build:local": "tsc --declaration --declarationMap",
    "build:ci": "tsc --declaration",
    "clean": "rm -rf dist/",
    "lint": "eslint emails"
  },
  "devDependencies": {
    "@gw2treasures/eslint-config": "0.0.6",
    "@gw2treasures/tsconfig": "0.0.1",
    "@types/react": "18.3.12",
    "eslint": "8.57.1",
    "react-email": "3.0.2",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@react-email/components": "0.0.28"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
