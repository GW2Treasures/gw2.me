{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "env": [
        "GITHUB_ACTIONS"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ]
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:migrate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "publish-package": {
      "cache": false,
      "dependsOn": [
        "build"
      ],
      "env": [
        "GITHUB_EVENT_NAME",
        "GITHUB_OUTPUT",
        "NPM_CONFIG_*"
      ]
    }
  }
}
