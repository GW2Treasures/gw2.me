{
  "extends": "@gw2treasures/tsconfig/nextjs",
  "compilerOptions": {
    // TODO: remove verbatimModuleSyntax override
    "verbatimModuleSyntax": false,

    "baseUrl": "./",
    "paths": {
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/.well-known/**/*.ts",
    ".next/types/**/*.ts",
    "vitest.config.mts",
  ],
}
