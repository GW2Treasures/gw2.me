{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build",
        "@gw2me/database#prisma:migrate",
        "demo-setup"
      ]
    },
    "demo-setup": {
      "cache": false,
      "dependsOn": [
        "^build",
        "@gw2me/database#prisma:migrate"
      ]
    }
  }
}
